<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="myTextInputLabel" parent="TextAppearance.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorControlActivated">@color/red</item>
    </style>


    <style name="mySwitch">
        <item name="colorControlActivated">@color/white_color</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/dark_grey</item>
        <item name="colorControlActivated">@color/ratingbar_yellow</item>
    </style>

    <style name="foodRatingBar">
        <item name="android:maxWidth">40dp</item>
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:minHeight">10dp</item>
    </style>
