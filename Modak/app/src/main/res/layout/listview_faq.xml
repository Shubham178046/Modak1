<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal">
<ImageView
    android:layout_width="0dp"
    android:layout_weight="0.1"
    android:layout_height="25dp"
    android:src="@drawable/icon_faq"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Lorem lpsum is simply dummy text"
        android:layout_gravity="center"
        android:textColor="@color/black_color"
        android:textSize="16dp"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="0.1"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/open_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/icon_open_faq"/>
        <Button
            android:id="@+id/close_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:visibility="gone"
            android:background="@drawable/icon_colse_faq"/>
    </RelativeLayout>
</LinearLayout>
<View
    android:layout_width="wrap_content"
    android:layout_height="2dp"
    android:background="@color/grey_color"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"/>

    <LinearLayout
        android:id="@+id/data_layout"
        android:visibility="gone"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem lpsum is simply dummy text of the printing and typesetting industry.Lorem lpsum has been the indus-"/>
    </LinearLayout>
</LinearLayout>