<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white_color"
    android:layout_height="match_parent"
    tools:context=".ui.Select_City">

    <include layout="@layout/custom_appbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@mipmap/img_menu3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Current Location"
            android:layout_marginTop="20dp"
            android:textColor="@color/white_color"
            android:gravity="center"
            android:textSize="18sp"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center_vertical"
           android:drawablePadding="10dp"
           android:layout_marginTop="20dp"
           android:layout_marginRight="20dp"
           android:layout_marginLeft="20dp"
           android:text="@string/edittext_hint_txt"
           android:drawableLeft="@drawable/edittext_icon_2"
           android:background="@drawable/edittext_bg"/>
    </LinearLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center_vertical"
   android:paddingLeft="30dp"
    android:textColor="@color/black_color"
    android:text="Do want to change your location?"
    android:background="@drawable/bg"/>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="@color/red_color"
   android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:text="Select Country"/>
    <Spinner
        android:id="@+id/country_spinner"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red_color"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Select City"/>

    <Spinner
        android:id="@+id/city_spinner"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="3dp"
            android:gravity="center_horizontal"
            android:background="@drawable/or_btn_design"
            android:text="OR" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="bottom"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:textSize="@dimen/sp18"
            android:textColor="@color/black_color"
            android:text="Enter Zip Code"
            android:background="@drawable/bg"/>
    </LinearLayout>
</RelativeLayout>
   <com.google.android.material.textfield.TextInputLayout
       android:layout_width="match_parent"
       android:layout_marginTop="3dp"
       android:layout_height="wrap_content"
       android:textColorHint="@color/red_color"
       android:backgroundTint="@color/black_color">

       <EditText
           android:id="@+id/zipcode_edt"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="@string/zip_code"
           android:textColor="@color/black_color"
           android:inputType="number"/>
   </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/grey_color"/>
        <Button
            android:id="@+id/get_stated_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_green"
            android:textColor="@color/white_color"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:layout_alignParentBottom="true"
            android:text="Get Started" />
    </RelativeLayout>

</LinearLayout>