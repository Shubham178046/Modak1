<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:background="@drawable/bg_scan_card" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textSize="12sp" android:textStyle="bold" android:gravity="center" android:id="@+id/tvLunch" android:layout_width="0dp" android:layout_height="match_parent" android:text="Lunch" android:drawableBottom="@drawable/selection_line" android:layout_weight="1"/>
            <TextView android:textSize="12sp" android:gravity="center" android:id="@+id/tvDinner" android:layout_width="0dp" android:layout_height="match_parent" android:text="Dinner" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
